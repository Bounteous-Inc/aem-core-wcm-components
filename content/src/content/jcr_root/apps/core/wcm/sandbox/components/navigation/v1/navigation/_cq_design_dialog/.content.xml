<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          jcr:description="Navigation Dialog"
          jcr:primaryType="nt:unstructured"
          jcr:title="Navigation"
          extraClientlibs="[core.wcm.sandbox.components.navigation.v1.editor]"
          sling:resourceType="cq/gui/components/authoring/dialog"
          helpPath="https://www.adobe.com/go/aem_cmp_navigation_v1">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/tabs"
                    maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Properties"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <siteRoot
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    fieldDescription="The root of the website."
                                    fieldLabel="Site Root"
                                    rootPath="/content"
                                    forceSelection="{Boolean}true"
                                    name="./siteRoot"
                                    required="{Boolean}true"/>
                            <startLevel
                                    wrapperClass="cmp-navigation__editor-startLevel"
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                    fieldDescription="The start level, relative to the site root; the site root is level 0."
                                    fieldLabel="Start level"
                                    max="100"
                                    min="0"
                                    name="./startLevel"
                                    step="1"
                                    value="0"/>
                            <currentPageTreeOnly
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                    fieldDescription="When selected, the Navigation component will collect only the child pages that have a common parent with the current page."
                                    text="Collect only pages from the current page's tree"
                                    name="./currentPageTreeOnly"
                                    value="{Boolean}true"
                                    checked="{Boolean}true"
                                    uncheckedValue="{Boolean}false"/>
                            <collectAllPages
                                    granite:class="cmp-navigation__editor-collect"
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                    fieldDescription="When selected, the Navigation component will collect all child pages."
                                    text="Collect all child pages"
                                    value="{Boolean}true"/>
                            <maxDepth
                                    wrapperClass="cmp-navigation__editor-maxDepth"
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                    fieldDescription="The maximum depth level in the content tree for searching pages, relative to the site root; the site root is level 0. A value of -1 means that all child pages of the site root will be provided in the Navigation."
                                    fieldLabel="Maximum depth level"
                                    max="100"
                                    min="-1"
                                    name="./maxDepth"
                                    step="1"
                                    value="-1"/>
                        </items>
                    </properties>
                    <styletab
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/include"
                        path="/mnt/overlay/cq/gui/components/authoring/dialog/style/tab_design/styletab"/>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
