<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Core WCM Form Container"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="http://www.adobe.com/go/aem6_1_docs_component_en#Form_Container - HTL">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <main
                jcr:primaryType="nt:unstructured"
                jcr:title="Main"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                margin="{Boolean}false">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <actionType
                                granite:class="cmp-action-type-selection"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                deleteHint="{Boolean}true"
                                fieldLabel="Action Type"
                                name="./actionType">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="core/wcm/components/form/container/v1/container/datasource/actiontypedatasource"/>
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    cq-dialog-dropdown-showhide-target=".action-type-dialog"/>
                            </actionType>
                            <advanced
                                granite:id="cmp-action-type-settings"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="core/wcm/components/form/container/v1/container/datasource/actiontypesettingsdatasource"/>
                            </advanced>
                            <workflowcontainer
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                granite:class="hide cmp-workflow-container">
                                <items jcr:primaryType="nt:unstructured">
                                    <workflowmodel
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                            emptyOption="{Boolean}true"
                                            fieldLabel="Start Workflow"
                                            fieldDescription="Whether a workflow should be started with the stored content as payload."
                                            name="./workflowModel">
                                        <datasource
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="core/wcm/components/form/container/v1/container/datasource/workflowmodeldatasource"/>
                                        <granite:data
                                                jcr:primaryType="nt:unstructured"
                                                cq-dialog-dropdown-showhide-target=".cmp-workflow-title"/>
                                    </workflowmodel>
                                    <workflowTitle
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            required="{Boolean}true"
                                            fieldLabel="Workflow Title"
                                            fieldDescription="Title for the workflow."
                                            wrapperClass="hide cmp-workflow-title"
                                            name="./workflowTitle">
                                        <granite:data
                                                jcr:primaryType="nt:unstructured"
                                                reverseshowhidetargetvalue=""/>
                                    </workflowTitle>
                                </items>
                            </workflowcontainer>
                            <redirect
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                fieldDescription="Leave empty to redisplay the form after submission"
                                fieldLabel="Thank You Page"
                                name="./redirect"
                                rootPath="/content"
                                wrapperClass="hide cmp-redirect-selection"/>
                        </items>
                    </column>
                </items>
            </main>
        </items>
    </content>
</jcr:root>
